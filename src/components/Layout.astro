---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Nashville AI Engineering - Meetups focused on building with AI. Join our community of developers, engineers, and AI enthusiasts in Nashville."
    />
    <meta
      name="keywords"
      content="AI, artificial intelligence, machine learning, Nashville, meetup, engineering, developers, tech community"
    />
    <meta name="author" content="Nashville AI Engineering" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://nashville-ai-engineering.netlify.app/"
    />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Nashville AI Engineering - Meetups focused on building with AI. Join our community of developers, engineers, and AI enthusiasts in Nashville."
    />
    <meta property="og:image" content="/nashville-ai-engineering.svg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content="https://nashville-ai-engineering.netlify.app/"
    />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Nashville AI Engineering - Meetups focused on building with AI. Join our community of developers, engineers, and AI enthusiasts in Nashville."
    />
    <meta property="twitter:image" content="/nashville-ai-engineering.svg" />

    <!-- Favicon and theme -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="theme-color" content="#84cc16" />

    <title>{title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white">
    <slot />
  </body>
</html>
