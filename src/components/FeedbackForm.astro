---
// FeedbackForm component with Netlify form integration
---

<div class="bg-gray-900 py-16 sm:py-24">
  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div
      class="relative isolate overflow-hidden bg-gray-800 px-6 py-24 after:pointer-events-none after:absolute after:inset-0 after:inset-ring after:inset-ring-white/15 sm:rounded-3xl sm:px-24 after:sm:rounded-3xl xl:py-32"
    >
      <h2
        class="mx-auto max-w-3xl text-center text-4xl font-semibold tracking-tight text-white sm:text-5xl"
      >
        Interested in sharing?
      </h2>
      <p class="mx-auto mt-6 max-w-lg text-center text-lg text-gray-300">
        Let us know what you'd like to share: a presentation, a demo of a
        project, or a group discussion on a topic.
      </p>
      <form
        id="feedback-form"
        class="mx-auto mt-10 max-w-md space-y-4"
        data-netlify="true"
        netlify-honeypot
        name="feedback"
      >
        <input type="hidden" name="form-name" value="feedback" />
        <p class="hidden">
          <label>
            Don't fill this out if you're human: <input name="bot-field" />
          </label>
        </p>

        <div>
          <label for="name" class="sr-only">Name</label>
          <input
            id="name"
            type="text"
            name="name"
            placeholder="Your name"
            class="form-input"
          />
        </div>

        <div>
          <label for="email" class="sr-only">Email address</label>
          <input
            id="email"
            type="email"
            name="email"
            required
            placeholder="Enter your email"
            autocomplete="email"
            class="form-input"
          />
        </div>

        <div>
          <label for="feedback" class="sr-only">What is your feedback?</label>
          <textarea
            id="feedback"
            name="feedback"
            required
            placeholder="What is your feedback?"
            rows="3"
            class="form-textarea"></textarea>
        </div>

        <button type="submit" class="w-full btn btn-primary btn-md">
          Send It!
        </button>
      </form>

      <!-- Success message -->
      <div
        id="success-message"
        class="hidden mx-auto mt-6 max-w-md text-center"
      >
        <div class="rounded-md bg-lime-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg
                class="h-5 w-5 text-lime-400"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-lime-800">
                Thank you! Your submission has been received.
              </p>
            </div>
          </div>
        </div>
      </div>

      <svg
        viewBox="0 0 1024 1024"
        aria-hidden="true"
        class="absolute top-1/2 left-1/2 -z-10 size-256 -translate-x-1/2"
      >
        <circle
          r="512"
          cx="512"
          cy="512"
          fill="url(#759c1415-0410-454c-8f7c-9a820de03641)"
          fill-opacity="0.4"></circle>
        <defs>
          <radialGradient
            id="759c1415-0410-454c-8f7c-9a820de03641"
            r="1"
            cx="0"
            cy="0"
            gradientUnits="userSpaceOnUse"
            gradientTransform="translate(512 512) rotate(90) scale(512)"
          >
            <stop stop-color="#a6cb0b"></stop>
            <stop offset="1" stop-color="#daeb64" stop-opacity="0"></stop>
          </radialGradient>
        </defs>
      </svg>
    </div>
  </div>
</div>

<script>
  // Handle form submission without page navigation
  document
    .getElementById('feedback-form')
    ?.addEventListener('submit', function (e) {
      e.preventDefault();

      const form = e.target as HTMLFormElement;
      const formData = new FormData(form);
      const submitButton = form.querySelector(
        'button[type="submit"]',
      ) as HTMLButtonElement;
      const originalText = submitButton.textContent;

      // Show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Submitting...';

      // Submit to Netlify using their form handling
      fetch('/', {
        method: 'POST',
        body: formData,
      })
        .then(() => {
          // Show success message
          form.style.display = 'none';
          document
            .getElementById('success-message')
            ?.classList.remove('hidden');
        })
        .catch((error) => {
          console.error('Error:', error);
          // Reset button and show error
          submitButton.textContent = 'Error - Try Again';
          submitButton.disabled = false;
          setTimeout(() => {
            submitButton.textContent = originalText;
            submitButton.disabled = false;
          }, 3000);
        });
    });
</script>
